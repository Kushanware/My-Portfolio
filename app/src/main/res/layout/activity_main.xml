<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">



    <!-- First CardView with profile information -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:srcCompat="@drawable/port2"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/MainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kush Shanware"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineering Student"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="About Me" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="Education Details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="Certificates" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="Projects" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="Resume" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second CardView with social media ImageViews -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/Insta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/instagram"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/Facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/facebook"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/Linkdln"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/linkedin"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/Emailview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/social"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/Github"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/github"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
